<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="540.0" prefWidth="749.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hotel.agencypt.Controller.GH_RegistrosCartao">
    <children>
        <ImageView fitHeight="496.0" fitWidth="710.0" layoutX="44.0" layoutY="44.0" nodeOrientation="RIGHT_TO_LEFT"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Imagens/hotel.png"/>
            </image>
            <effect>
                <Lighting>
                    <bumpInput>
                        <Shadow/>
                    </bumpInput>
                    <light>
                        <Light.Distant/>
                    </light>
                </Lighting>
            </effect>
        </ImageView>
        <Button layoutX="-5.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                onAction="#voltarAtras" prefHeight="540.0" prefWidth="49.0"
                style="-fx-background-color: #ccffff; -fx-border-color: gray;">
            <graphic>
                <ImageView fitHeight="38.0" fitWidth="43.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../Imagens/voltar.png"/>
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Label layoutX="528.0" layoutY="14.0" text="Ver registros de um cartão">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="42.0" prefWidth="43.0"
                style="-fx-background-color: #ccffff; -fx-border-radius: 10; -fx-background-radius: 10;">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Label layoutX="82.0" layoutY="460.0" text="Nº Cartão:" textFill="WHITE">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <ImageView fitHeight="38.0" fitWidth="43.0" layoutX="235.0" layoutY="441.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../../Imagens/searchCard.png"/>
            </image>
        </ImageView>
        <TableView fx:id="TableViewRegistros" layoutX="324.0" layoutY="56.0" prefHeight="472.0" prefWidth="415.0">
            <columns>
                <TableColumn fx:id="NumColumn" prefWidth="123.0" text="Nº Cartão"/>
                <TableColumn fx:id="LocalColumn" prefWidth="144.0" text="Local"/>
                <TableColumn fx:id="DataColumn" prefWidth="138.0" text="Data/Hora"/>
            </columns>
        </TableView>
        <TextField fx:id="textNum" layoutX="82.0" layoutY="490.0" prefHeight="38.0" prefWidth="231.0"/>
    </children>
</AnchorPane>
